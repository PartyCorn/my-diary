                    {{#each this.tags}}
                        <div class="tag">#{{this}}</div>
                    {{/each}}
                </div>
                <p>{{this.content}}</p>
            {{/if}}
        </div>
        <hr> --}}
        <div class="flex items-center gap-4 bg-slate-50 px-4 min-h-[72px] py-2 justify-between cursor-pointer" onclick="window.location.href = '/entries/{{this.date}}'.replaceAll('-', '/')">
            <div class="flex items-center gap-4">
