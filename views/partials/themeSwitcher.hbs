<div class="theme-picker">
    <h3 class="text-[#0e141b] text-lg font-bold leading-tight tracking-[-0.015em] px-4 pb-2 pt-4">{{ __ "theme" }}</h3>
    <div class="theme-buttons flex max-w-[480px] flex-wrap items-end gap-4 px-4 py-3">
        <button title="Light" data-index="0" data-color="#f0f0f0" data-bg-color="#222" class="theme-btn"></button>
        <button title="Dark" data-index="1" data-color="#222" data-bg-color="#f0f0f0" class="theme-btn"></button>
        <button title="Time-based" data-index="2" data-color="#fff" data-bg-color="#000" class="theme-btn flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12c0-1.232-.046-2.453-.138-3.662a4.006 4.006 0 0 0-3.7-3.7 48.678 48.678 0 0 0-7.324 0 4.006 4.006 0 0 0-3.7 3.7c-.017.22-.032.441-.046.662M19.5 12l3-3m-3 3-3-3m-12 3c0 1.232.046 2.453.138 3.662a4.006 4.006 0 0 0 3.7 3.7 48.656 48.656 0 0 0 7.324 0 4.006 4.006 0 0 0 3.7-3.7c.017-.22.032-.441.046-.662M4.5 12l3 3m-3-3-3 3" />
            </svg>
        </button>
    </div>
    <h3 class="text-[#0e141b] text-lg font-bold leading-tight tracking-[-0.015em] px-4 pb-2 pt-4">{{ __ "design" }}</h3>
    <div class="grid gap-6 mb-6 md:grid-cols-2">
        <div class="flex flex-col">
            <p class="text-[#0e141b] text-base font-bold leading-tight tracking-[-0.015em] px-4 pb-2 pt-4">{{ __ "use_default_colors" }}</p>
            <div class="theme-color-buttons flex max-w-[480px] flex-wrap items-end gap-4 px-4 py-3">
                {{#each colors as |color|}}
                    <button data-color="{{color.color}}" data-bg-color="{{color.bgColor}}" class="color-btn"></button>
                {{/each}}
            </div>
        </div>
        <div class="flex flex-col">
            <p class="text-[#0e141b] text-base font-bold leading-tight tracking-[-0.015em] px-4 pb-2 pt-4">{{ __ "use_custom_colors" }}</p>
            <div class="theme-color-buttons flex max-w-[480px] flex-wrap items-end gap-4 px-4 py-3">
                <input type="color" name="color" id="custom-color-picker" value="{{user.color}}">
                <input type="color" name="bg-color" id="custom-bg-color-picker" value="{{user.bg_color}}">
            </div>
        </div>
    </div>
</div>