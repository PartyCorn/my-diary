<header id="general-header">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poetsen+One&family=Roboto:wght@900&display=swap" rel="stylesheet">
    <style>body { margin-top: 70px; }</style>

    <div class="header-container">
        <div class="logo" onclick="location.href='{{#if user}}/home{{else}}/{{/if}}'">
            <img src="/static/logo.png" alt="Logo">
            <span>My Diary</span>
        </div>
        {{#if user}}
            <div class="search-container">
                <input type="text" placeholder="Поиск..." id="search-input">
                <div class="search-dropdown" id="search-dropdown">
                    <!-- Здесь могут быть элементы выпадающего меню поиска -->
                </div>
            </div>
        {{/if}}
        <div class="header-right">
            {{!-- {{#if user}}
                <div class="theme-switch dropdown-box" id="theme-switch">
                    <div id="active-theme-display">
                        <div id="active-bg-display"></div>
                    </div>
                    <div class="dropdown" id="theme-dropdown">
                        {{> themeSwitcher }}
                    </div>
                </div>
            {{/if}} --}}
            <div class="account dropdown-box" id="account">
                {{#if user}}
                    {{!-- <img src="https://lh3.googleusercontent.com/a/ACg8ocIZxlW35AFzChEGDdqLe1A4EFsh-Wn1R_8850K6ToGmqZeBcvhw=s192-c-rg-br100" alt="Avatar"> --}}
                    <span>{{ user.email }}</span>
                    <div class="dropdown" id="account-dropdown">
                        <a href="#settings">{{ __ "settings" }}</a>
                        <a href="/logout">{{ __ "logout" }}</a>
                    </div>
                {{else}}
                    <style>body { --color: #13cbe7 }</style>
                    <span><a href="/home">Начать</a></span>
                {{/if}}
            </div>
        </div>
    </div>
</header>
<div id="settings" class="modal"></div>
<div id="overlay" class="overlay"></div>